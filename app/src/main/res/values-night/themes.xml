        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorN</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorN</item>
        <item name="colorOnSecondary">@color/secondaryDarkColorN</item>
